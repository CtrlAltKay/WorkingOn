@page
@model EmployeeDirectory.Pages.IndexModel
@{
    ViewData["Title"] = "Employee Directory";
}

<!DOCTYPE html>
<html>
<head>
    <title>Employee Directory</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
        }

            .header h1 {
                font-size: 3em;
                margin-bottom: 10px;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            }

            .header p {
                font-size: 1.2em;
                opacity: 0.9;
            }

        .search-container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            margin-bottom: 30px;
        }

        .search-box {
            display: flex;
            gap: 15px;
        }

            .search-box input {
                flex: 1;
                padding: 15px 20px;
                border: 2px solid #e0e0e0;
                border-radius: 10px;
                font-size: 16px;
                transition: all 0.3s;
            }

                .search-box input:focus {
                    outline: none;
                    border-color: #667eea;
                    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
                }

            .search-box button {
                padding: 15px 40px;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                border: none;
                border-radius: 10px;
                font-size: 16px;
                font-weight: 600;
                cursor: pointer;
                transition: transform 0.2s, box-shadow 0.2s;
            }

                .search-box button:hover {
                    transform: translateY(-2px);
                    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
                }

        .results-info {
            background: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

            .results-info h2 {
                color: #333;
                font-size: 1.5em;
            }

        .employee-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
        }

        .employee-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .employee-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            }

        .employee-photo {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 15px;
            overflow: hidden;
        }

            .employee-photo img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .employee-photo-placeholder {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .employee-name {
            font-size: 1.5em;
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }

        .employee-title {
            color: #667eea;
            font-weight: 500;
            margin-bottom: 10px;
            font-size: 1.1em;
        }

        .employee-school {
            color: #666;
            font-size: 0.95em;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .employee-id {
            display: inline-block;
            background: #f0f0f0;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.85em;
            color: #666;
            margin-top: 10px;
        }

        .no-results {
            background: white;
            padding: 60px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

            .no-results h3 {
                font-size: 1.5em;
                color: #666;
                margin-bottom: 10px;
            }

            .no-results p {
                color: #999;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>🏢 Employee Directory</h1>
            <p>Search our team members</p>
        </div>

        <div class="search-container">
            <form method="get" class="search-box">
                <input type="text"
                       name="SearchTerm"
                       value="@Model.SearchTerm"
                       placeholder="Search by name, title, or school..."
                       autofocus />
                <button type="submit">Search</button>
            </form>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.Employees.Any())
        {
            <div class="results-info">
                <h2>
                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                    {
                        <span>Found @Model.Employees.Count result(s) for "@Model.SearchTerm"</span>
                    }
                    else
                    {
                        <span>All Employees (@Model.Employees.Count)</span>
                    }
                </h2>
            </div>
        }

        @if (Model.Employees.Any())
        {
            <div class="employee-grid">
                @foreach (var employee in Model.Employees)
                {
                    <div class="employee-card">
                        @if (!string.IsNullOrWhiteSpace(employee.Photo))
                        {
                            <div class="employee-photo">
                                <img src="@employee.Photo" alt="@employee.FirstName @employee.LastName" />
                            </div>
                        }
                        else
                        {
                            <div class="employee-photo-placeholder">
                                @if (!string.IsNullOrWhiteSpace(employee.FirstName))
                                {
                                    @employee.FirstName[0]
                                }
                                else
                                {
                                    <span>?</span>
                                }
                            </div>
                        }
                        <div class="employee-name">
                            @(employee.FirstName ?? "") @(employee.LastName ?? "")
                        </div>
                        <div class="employee-title">
                            @(employee.Title ?? "No title")
                        </div>
                        <div class="employee-school">
                            🎓 @(employee.School ?? "No school listed")
                        </div>
                        <div class="employee-id">
                            ID: @employee.Id
                        </div>
                    </div>
                }
            </div>
        }
        else if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
        {
            <div class="no-results">
                <h3>No employees found</h3>
                <p>Try a different search term</p>
            </div>
        }
        else
        {
            <div class="no-results">
                <h3>No employees in directory</h3>
                <p>The directory is currently empty</p>
            </div>
        }
    </div>
</body>
</html>